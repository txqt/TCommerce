@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Mvc

@model AccessTokenRequestModel


@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_EmptyLayout";
}
<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .centered-div {
        width: 400px;
        height: 200px;
    }
</style>
<div class="container">
    <div class="centered-div">
        <form asp-action="Login" asp-controller="Account" class="sign-in-form" method="post" role="form" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" asp-for="UserNameOrEmail">Username or Email</label>
                <input asp-for="UserNameOrEmail" class="form-control" />
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" checked />
                        <label class="form-check-label" asp-for="RememberMe"> Remember me </label>
                    </div>
                </div>

                <div class="col">
                    <!-- Simple link -->
                    <a href="#!">Forgot password?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button style="width: 100%" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Sign in</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Not a member? <a href="/register">Register</a></p>
            </div>
        </form>
    </div>
</div>



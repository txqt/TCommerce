@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_EmptyLayout";
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .centered-div {
        width: 400px;
        height: 200px;
    }
</style>
<div class="container">
    <div class="centered-div">
        <h4>Nhập địa chỉ email của tài khoản.</h4>
        <hr />
        <div class="row">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" style="width: 100%" class="btn btn-primary">Gửi</button>
            </form>
        </div>
    </div>
</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

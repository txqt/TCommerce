@model List<BannerModel>

@if(Model is not null && Model.Count > 0)
{
    <div class="intro-slider-container">
        <div class="intro-slider owl-carousel owl-theme owl-nav-inside owl-light owl-loaded owl-drag" data-toggle="owl" data-owl-options="{
                            &quot;dots&quot;: false,
                            &quot;nav&quot;: false,
                            &quot;responsive&quot;: {
                                &quot;992&quot;: {
                                    &quot;nav&quot;: true
                                }
                            }
                        }">
            <!-- End .intro-slide -->
            <!-- End .intro-slide -->
            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(-3038px, 0px, 0px); transition: all 0.4s ease 0s; width: 9116px;">
                    <div class="owl-item" style="width: 1519.2px;">
                        @foreach (var item in Model)
                        {
                            <div class="intro-slide" style="@(string.Format("background-image: url('{0}')", Url.Content(item.Picture.UrlPath)))">
                                <div class="container intro-content text-center">
                                    <h3 class="intro-subtitle text-white">@Html.Raw(item.Subtitle)</h3><!-- End .h3 intro-subtitle -->
                                    <h1 class="intro-title text-white">@Html.Raw(item.Title)</h1><!-- End .intro-title -->

                                    <a href="@item.ButtonLink" class="btn btn-outline-white-4">
                                        <span>@item.ButtonLabel</span>
                                    </a>
                                </div><!-- End .intro-content -->
                            </div>
                        }
                    </div>
                </div>
            </div><div class="owl-nav"><button type="button" role="presentation" class="owl-prev"><i class="icon-angle-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="icon-angle-right"></i></button></div><div class="owl-dots disabled"></div>
        </div><!-- End .intro-slider owl-carousel owl-theme -->

        <span class="slider-loader"></span><!-- End .slider-loader -->
    </div>
}

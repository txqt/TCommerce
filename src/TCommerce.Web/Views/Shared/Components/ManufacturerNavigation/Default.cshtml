@model ManufacturerNavigationModel

@if (Model is not null)
{
    <div class="widget widget-collapsible">
        <h3 class="widget-title">
            <a data-toggle="collapse" href="#widget-manufacturer" role="button" aria-expanded="true" aria-controls="widget-manufacturer">
                Manufacturer
            </a>
        </h3><!-- End .widget-title -->

        <div class="collapse show" id="widget-manufacturer">
            <div class="widget-body">
                <div class="filter-items filter-items-count">
                    @if (Model.Manufacturers?.Count > 0)
                    {
                        @foreach (var item in Model.Manufacturers)
                        {
                            <ul class="manufacturer-list">
                                <li>
                                    <div class="filter-item">
                                        <div class="custom-control custom-checkbox">
                                            <a href="/@item.SeName"><label class="custom-control-label" for="manufacturer_@item.Id">@item.Name</label></a>
                                        </div><!-- End .custom-checkbox -->
                                    </div><!-- End .filter-item -->
                                </li>
                            </ul>
                        }
                    }
                </div>
                <!-- End .filter-items -->
            </div><!-- End .widget-body -->
        </div><!-- End .collapse -->
    </div>
}
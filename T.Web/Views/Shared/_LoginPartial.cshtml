            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">Xin chào @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Đăng xuất</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">

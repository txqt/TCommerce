@using Microsoft.AspNetCore.Http;
@model ResetPasswordRequest
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<h1>@ViewData["Title"].</h1>

@{
    var email = Context.Request.Query["email"];
    var token = Context.Request.Query["token"];
}

<form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">
    <h4>Đặt lại mật khẩu của bạn.</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- ... -->
    <input asp-for="@Model.Email" type="hidden" value="@email" />
    <input asp-for="@Model.Token" type="hidden" value="@token" />
    <!-- ... -->

    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Đặt lại</button>
        </div>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
